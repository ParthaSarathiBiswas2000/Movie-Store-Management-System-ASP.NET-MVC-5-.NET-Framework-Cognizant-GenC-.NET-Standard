<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.name

                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@Url.Content(item.image_path)" width="100%" alt="@item.name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">

                            <p class="card-text"><b>Cinema: </b>@item.name</p>
                            <p class="card-text"><b>Release Year: </b>@item.realease_year</p>
                            <p class="card-text"><b>Price: </b>@item.price</p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">

                                @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                                {
                                    @Html.ActionLink("Go To Purchase", "UserDisplay", "Movie", new { id = item.Id }, new { @class = "btn btn-success" })<i class="bi bi-pencil-square"></i>
                                }


                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    @Html.ActionLink("Edit Movie", "Edit", "Movie", new { id = item.Id }, new { @class = "btn btn-warning" })<i class="bi bi-pencil-square"></i>
                                    @Html.ActionLink("Add Movie", "Create", "Movie", new { id = item.Id }, new { @class = "btn btn-success" })<i class="bi bi-pencil-square"></i>
                                    @Html.ActionLink("Delete", "Delete", "Movie", new { id = item.Id }, new { @class = "btn btn-danger" })<i class="bi bi-pencil-square"></i>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>