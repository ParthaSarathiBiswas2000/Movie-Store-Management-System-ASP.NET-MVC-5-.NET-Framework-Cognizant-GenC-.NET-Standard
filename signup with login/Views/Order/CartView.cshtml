
@{
    ViewBag.Title = "CartView";
}

@model List<signup_with_login.Models.ordert>

<style>
    body {
        background-color: antiquewhite;
    }
</style>


<h2 style="text-align:center;">Your Cart</h2>

@if (Model.Count == 0)
{
    <p>Your shopping cart is empty !!!</p>
    <button class="btn btn-outline-info">@Html.ActionLink("Back to Purchase", "UserDisplay", "Movie")</button>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Item Id</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.quantity</td>
                    <td>@item.price</td>
                    <td>@(item.price * item.quantity)</td>
                    <td>
                        @using (Html.BeginForm("RemoveFromCart", "Order", new { productId = item.Id, price = item.price }, FormMethod.Post))
                        {
                            <input type="hidden" name="productId" value="@item.Id" />

                            <input type="submit" value="Remove" class="btn btn-danger" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p style="font-weight:bold; font-size:40px">Total : @(Model.Sum(item => item.price * item.quantity))</p>

    <div class="row">
        <div class="col-md-6">
    <button class="btn btn-outline-info">@Html.ActionLink("Continue Shopping", "UserDisplay", "Movie")</button>
            </div>
    <br />
    <br />
    <div class="col-md-6">

        <button class="btn btn-outline-info">@Html.ActionLink("Make Payment", "Payment", "Order")</button>
    </div>
    </div>
    @*@Html.ActionLink("Clear", "ClearCart","Order");*@
}
